<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.techinstitute.s15011.productorder.ProductView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/ProductView">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メアド取得"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="注文画面へ"
        android:id="@+id/btnTransition"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="商品一覧"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnTransition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">



        <TextView android:text="おすすめ！" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="#bfbfbf"
            android:textSize="17dp"
            android:textColor="#000000" />


        <ListView android:id="@+id/listProducts1" android:layout_width="fill_parent"
            android:layout_height="180dp" />

        <TextView android:text="商品一覧" android:layout_width="fill_parent"
            android:layout_height="25dp" android:background="#bfbfbf"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ListView android:id="@+id/listProducts2" android:layout_width="fill_parent"
            android:layout_height="180dip"
            android:layout_weight="0.06" />


    </LinearLayout>
</LinearLayout>
